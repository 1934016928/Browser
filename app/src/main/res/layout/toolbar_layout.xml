<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:background="@color/background"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="8dp"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content">
    <ImageButton
        android:layout_weight="1"
        android:src="@drawable/back_button_style"
        android:background="@android:color/transparent"
        android:id="@+id/go_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:layout_weight="1"
        android:src="@drawable/go_button_style"
        android:background="@android:color/transparent"
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:layout_weight="1"
        android:src="@drawable/menu_button_style"
        android:background="@android:color/transparent"
        android:id="@+id/menu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:layout_weight="1"
        android:src="@drawable/window_button_style"
        android:background="@android:color/transparent"
        android:id="@+id/window_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:layout_weight="1"
        android:src="@drawable/home_button_style"
        android:background="@android:color/transparent"
        android:id="@+id/home_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>